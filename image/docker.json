{
  "builders": [{
      "type": "openstack",
      "image_name": "ubuntu_k8s_{{user `k8sversion`}}_docker",
      "source_image": "{{user `imageID`}}",
      "flavor": "c1.2",
      "floating_ip_pool": "{{user `fipID`}}",
      "networks": ["{{user `network`}}"],
      "security_groups": ["{{user `secgroup`}}"],
      "volume_size": 3,
      "use_blockstorage_volume": true,
      "ssh_username": "ubuntu",
      "image_visibility": "{{user `visibility`}}"
    }
  ],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get upgrade -y",
      "sudo apt-get install -y apt-transport-https curl wget",
      "echo 'deb https://apt.kubernetes.io/ kubernetes-xenial main' | sudo tee /etc/apt/sources.list.d/kubernetes.list",
      "curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add -",
      "sudo apt-get update",
      "sudo apt-get install -y kubelet={{user `k8sversion`}}-00 kubeadm={{user `k8sversion`}}-00 kubectl={{user `k8sversion`}}-00",
      "sudo apt-mark hold kubelet kubeadm kubectl",
      "sudo rm -f /etc/machine-id",
      "sudo touch /etc/machine-id"
    ]
  },{
    "type": "shell",
    "inline": [
      "echo 'overlay' | sudo tee /etc/modules-load.d/containerd.conf",
      "echo 'br_netfilter' | sudo tee -a /etc/modules-load.d/containerd.conf",
      "echo 'net.bridge.bridge-nf-call-iptables  = 1' | sudo tee /etc/sysctl.d/99-kubernetes-cri.conf",
      "echo 'net.ipv4.ip_forward                 = 1' | sudo tee -a /etc/sysctl.d/99-kubernetes-cri.conf",
      "echo 'net.bridge.bridge-nf-call-ip6tables = 1' | sudo tee -a /etc/sysctl.d/99-kubernetes-cri.conf",
      "sudo sysctl --system",
      "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
      "sudo add-apt-repository 'deb [arch=amd64] https://download.docker.com/linux/ubuntu '$(lsb_release -cs)' stable'",
      "sudo apt-get update",
      "sudo apt-get install -y docker-ce",
      "sudo apt-mark hold docker-ce",
      "sudo systemctl restart docker",
      "sudo systemctl enable docker"
    ]
  }]
}
